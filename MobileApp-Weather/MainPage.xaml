<Page
    x:Class="MobileApp_Weather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MobileApp_Weather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel x:Name="ShowWeather" Background="Aquamarine" Height="auto" Width="auto">

        <!-- Banner -->
        <StackPanel x:Name="Banner" Height="130" Background="Aqua" VerticalAlignment="Top">
            <TextBlock x:Name="Header" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="72" FontWeight="Bold" Height="130" Margin="216,0"/>
        </StackPanel>

        <Grid>
            <Button Content="Current Location" Click="CurrentLo_Click" Height="60" Width="180" Margin="124,451,0,-451"/>
        </Grid>
        
    </StackPanel>
</Page>